{
  "name": "@backend/api-gateway",
  "version": "1.0.0",
  "description": "API Gateway service for the Automated Meeting Minutes System",
  "main": "dist/index.js",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn src/index.ts",
    "build": "tsc",
    "test": "jest",
    "test:integration": "jest --config jest.config.ts --testMatch '**/test/integration/**/*.test.ts'",
    "test:unit": "jest --config jest.config.ts --testMatch '**/test/unit/**/*.test.ts'",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@azure/identity": "^3.2.2",
    "@microsoft/microsoft-graph-client": "^3.0.0",
    "@microsoft/teams-js": "^2.0.0",
    "axios": "^1.4.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^7.0.0",
    "helmet": "^7.0.0",
    "inversify": "^6.0.1",
    "ioredis": "^5.0.0",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "pino": "^8.11.0",
    "rate-limiter-flexible": "^2.4.1",
    "redis": "^4.6.7",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.6.0",
    "uuid": "^9.0.0",
    "winston": "^3.9.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^18.15.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.38.0",
    "husky": "^8.0.3",
    "ioredis-mock": "^8.0.0",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "rimraf": "^5.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0"
  }
}