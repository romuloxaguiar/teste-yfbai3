{
  "name": "@backend/root",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/api-gateway",
    "packages/transcription-service",
    "packages/ai-engine",
    "packages/document-service",
    "packages/distribution-service"
  ],
  "scripts": {
    "build": "tsc --build",
    "build:all": "lerna run build",
    "build:services": "lerna run build --scope=@backend/{api-gateway,transcription-service,ai-engine,document-service,distribution-service}",
    "test": "jest",
    "test:all": "lerna run test",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.ts\"",
    "clean": "rimraf **/dist",
    "dev:services": "lerna run dev --parallel",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "migrate": "lerna run migrate",
    "seed": "lerna run seed",
    "docs": "typedoc",
    "security:audit": "snyk test",
    "benchmark": "lerna run benchmark"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@jest/types": "^29.5.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.2.3",
    "@types/node": "^22.13.0",
    "eslint": "^8.38.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-mock": "^29.0.0",
    "lerna": "^6.6.1",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "rimraf": "^5.0.0",
    "snyk": "^1.1130.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.3",
    "typedoc": "^0.24.7",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@azure/identity": "^3.0.0",
    "@azure/msal-node": "^1.14.0",
    "@azure/storage-blob": "^12.0.0",
    "@microsoft/microsoft-graph-client": "^3.0.0",
    "@microsoft/teams-js": "^2.0.0",
    "@nestjs/cache-manager": "1.x",
    "@nestjs/common": "^9.0.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/swagger": "^6.0.0",
    "@nestjs/testing": "^9.0.0",
    "applicationinsights": "^2.7.0",
