    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^7.0.0",
    "handlebars": "^4.7.0",
    "helmet": "^6.0.0",
    "inversify": "^6.0.1",
    "ioredis": "^5.0.0",
